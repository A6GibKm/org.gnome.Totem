{
    "name": "gst-plugins-bad",
    "buildsystem": "meson",
    "cleanup": [ "/bin/*webrtc*", "/bin/crossfade", "/bin/tsparser", "/bin/playout" ],
    "config-opts": [
        "-Dopenh264=disabled",
        "-Dvdpau=disabled",
        "-Dvulkan=disabled"
    ],
    "sources": [
        {
            "type": "git",
            "url": "https://gitlab.freedesktop.org/gstreamer/gst-plugins-bad.git",
            "tag": "1.18.2",
            "commit": "b375ee4cdbcb98687c226d6564f8678a809cf02a"
        }
    ],
    "post-install": [
        "mkdir -p /app/lib/codecs/lib/gstreamer-1.0",
        "mv /app/lib/gstreamer-1.0/*.so /app/lib/codecs/lib/gstreamer-1.0"
    ]
}
